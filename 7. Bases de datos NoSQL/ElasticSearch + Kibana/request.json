# Crear indice 
PUT /zapato_deportivo

{
  "mappings": {
    "properties": {
      "name": {"type": "text"}, 
      "brand": {"type": "keyword"}, 
      "price": {"type": "double" }, 
      "color": {"type": "keyword"}
    }
  }
}

