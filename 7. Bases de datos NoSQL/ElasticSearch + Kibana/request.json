# Buscar por marca 
GET /zapato_deportivo/_search
{
  "query": {
    "match": {
      "brand": "Nike"
    }
  }
}

# Buscar por marca y color 
GET /zapato_deportivo/_search
{
  "query": {
    "bool": {
      "must": [
        { "match": { "brand": "Brooks" }},
        { "range": { "price": { "lt": 150 }}}
      ]
    }
  }
}

# Buscar por marca, color y evitar precio 
GET /zapato_deportivo/_search
{
  "query": {
    "bool": {
      "must": [
        { "match": { "brand": "Adidas" }},
        { "range": { "price": { "gt": 150 }}}
      ],
      "must_not": [
        { "match": { "color": "Black" }}
      ]
    }
  }
}





