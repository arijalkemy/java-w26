## Mostrar el título y el nombre del género de todas las series.

SELECT s.title, g.name as gender_name
FROM movies_db.series s
INNER JOIN movies_db.genres g
ON s.genre_id = g.id


## Mostrar el título de los episodios,
## el nombre y apellido de los actores que trabajan en cada uno de ellos.

SELECT e.title, a.first_name, a.last_name
FROM actor_episode ae
INNER JOIN episodes e ON ae.episode_id = e.id
INNER JOIN actors a ON ae.actor_id = a.id

## Mostrar el título de todas las series y el total de temporadas que tiene cada una de ellas.

SELECT s.title, COUNT(s.id) AS total
FROM series s
GROUP BY s.title
ORDER BY total DESC

## Mostrar el nombre de todos los géneros
## y la cantidad total de películas por cada uno, siempre que sea mayor o igual a 3.

SELECT g.name, COUNT(m.genre_id) AS total_pelis
FROM movies m
INNER JOIN genres g ON m.genre_id = g.id
GROUP  By g.name
HAVING total_pelis >= 3

## Mostrar sólo el nombre y apellido de los actores que trabajan en
## todas las películas de la guerra de las galaxias y que estos no se repitan.

SELECT a.first_name, a.last_name
FROM actors a
WHERE a.id IN ( SELECT a2.id FROM actor_movie am
                INNER JOIN actors a2 ON a2.id = am.actor_id
                INNER JOIN movies m ON m.id = am.movie_id
                WHERE m.title LIKE 'La Guerra de las galaxias%'
              )
